# Local rules for testing
alert tcp any any -> any 80 (msg:"Test HTTP Traffic"; flow:established,to_server; content:"GET"; http_method; sid:1000001; rev:1;)
alert tcp any any -> any 443 (msg:"Test HTTPS Traffic"; flow:established,to_server; tls.version:tls1.2; sid:1000002; rev:1;)
alert icmp any any -> any any (msg:"Test ICMP Traffic"; sid:1000003; rev:1;)
alert udp any any -> any 53 (msg:"Test DNS Traffic"; content:"|01 00 00 01 00 00 00 00 00 00|"; sid:1000004; rev:1;)
